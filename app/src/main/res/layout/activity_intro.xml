<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B2A4C"
    tools:context=".intro">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="serif-monospace"
        android:text="Selamat Datang!"
        android:textColor="#F7E987"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBiodata"
        android:layout_width="183dp"
        android:layout_height="65dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="128dp"
        android:backgroundTint="#005B41"
        android:drawableLeft="@drawable/baseline_person_pin_24"
        android:text="Biodata"
        android:textColor="#F7E987"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/btnKalku"
        android:layout_width="183dp"
        android:layout_height="65dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="#005B41"
        android:drawableLeft="@drawable/baseline_calculate_24"
        android:text="Kalkulator"
        android:textColor="#F7E987"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fbtnHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:backgroundTint="#B20600"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnweb"
        app:layout_constraintHorizontal_bias="0.019"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btndaf"
        app:layout_constraintVertical_bias="0.348"
        app:srcCompat="@android:drawable/stat_notify_error" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="94dp"
        android:layout_height="116dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/umblogo"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/btnspin"
        android:layout_width="183dp"
        android:layout_height="65dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="56dp"
        android:backgroundTint="#005B41"
        android:drawableLeft="@drawable/baseline_format_list_numbered_24"
        android:text="Kalkulator Spinner"
        android:textColor="#F7E987"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBiodata" />

    <Button
        android:id="@+id/btnLog"
        android:layout_width="183dp"
        android:layout_height="65dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="#005B41"
        android:drawableLeft="@drawable/baseline_person_add_alt_24"
        android:text="Login"
        android:textColor="#F7E987"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnKalku" />

    <Button
        android:id="@+id/btndaf"
        android:layout_width="183dp"
        android:layout_height="65dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="#005B41"
        android:drawableLeft="@drawable/baseline_person_add_alt_1_24"
        android:text="Daftar"
        android:textColor="#F7E987"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnspin" />

    <Button
        android:id="@+id/btnfrag"
        android:layout_width="183dp"
        android:layout_height="65dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#005B41"
        android:drawableLeft="@drawable/baseline_filter_frames_24"
        android:text="Fragment"
        android:textColor="#F7E987"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLog" />

    <Button
        android:id="@+id/btnweb"
        android:layout_width="183dp"
        android:layout_height="65dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="#005B41"
        android:drawableLeft="@drawable/baseline_web_asset_24"
        android:text="WebView"
        android:textColor="#F7E987"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnfrag" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Layanan Kami: "
        android:textColor="#CBC07B"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.143"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

</androidx.constraintlayout.widget.ConstraintLayout>